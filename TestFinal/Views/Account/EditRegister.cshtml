@model TestFinal.Models.ApplicationUser
@{
    ViewBag.Title = "Izmeni korisnika";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("EditRegister", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Promena podataka o korisniku.</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.PasswordHash)
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.UserName, "Korisničko ime", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.UserName, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Pravo pristupa", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("UserRoles", (SelectList)ViewBag.Name, (string)ViewBag.Rola, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Roles, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sačuvaj izmene" class="dugme" />
        </div>
    </div>
}
<td class="form-actions">
    <button type="button" onclick="location.href='@Url.Action("ResetUserPassword", "Account", new { userId = Model.Id, UserName = Model.UserName})'" id="RESETUJ">Resetuj lozinku</button>
    <button type="button" onclick="location.href='@Url.Action("Index", "Korisnici", new { userId = Model.Id, UserName = Model.UserName})'" class="dugmeE">Nazad</button>
</td>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style type="text/css">


    body {
        color: #000;
    }

    .dugme {
        display: block;
        background-color: #fff;
        color: #3B5998;
        font-weight: bold;
        border-radius: 30px;
        border-width: 1.5px;
        border-color: #3B5998;
        margin-top: -5px;
        height: 30px;
        width: 170px;
    }

        .dugme:hover {
            color: #1a3a7e;
            border-color: #1a3a7e;
        }


    .dugmeE {
        display: inline-block;
        background-color: #fff;
        color: #3B5998;
        font-weight: bold;
        border-radius: 30px;
        border-width: 1.5px;
        border-color: #3B5998;
        height: 30px;
        width: 100px;
    }



        .dugmeE:hover {
            color: #1a3a7e;
            border-color: #1a3a7e;
        }



    #RESETUJ {
        display: inline-block;
