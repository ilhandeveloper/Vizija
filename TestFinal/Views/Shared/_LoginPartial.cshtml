@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li style="margin-top: 6.2%;">
                <span style="color:#fff; font-size:15px "> Trenutni korisnik: <span style="color:#fff;">@User.Identity.GetUserName()</span></span>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()" style="color:#fff;">Odjavi se</a></li>
        </ul>

    }
}
else
{
    <ul class="nav navbar-nav navbar-right" id="odjava">
        @*  <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
        <li>@Html.ActionLink("Prijavi se", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}